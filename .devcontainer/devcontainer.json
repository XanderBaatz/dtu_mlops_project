// For format details, see https://aka.ms/devcontainer.json
{
    "name": "dtu_mlops_project",

    // Official Dev Containers Python image (multi-arch)
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",

    // Force amd64 on Apple Silicon (M1/M2)
    "runArgs": ["--platform=linux/amd64"],

    "features": {},

    // Run setup script after container creation
    "postCreateCommand": "bash .devcontainer/post_create.sh",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "editorconfig.editorconfig"
            ],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/dtu_mlops_project/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/dtu_mlops_project/.venv/bin/pytest"
            }
        }
    }
}
